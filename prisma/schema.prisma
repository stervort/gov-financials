generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ──────────────────────────────────────
// AUTH (NextAuth.js / Auth.js)
// ──────────────────────────────────────

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  sessions    Session[]
  accounts    Account[]

  // Link to organizations via membership
  memberships OrgMembership[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ──────────────────────────────────────
// MULTI-TENANCY
// ──────────────────────────────────────

model Organization {
  id         String          @id @default(cuid())
  name       String
  createdAt  DateTime        @default(now())

  memberships  OrgMembership[]
  engagements  Engagement[]
}

enum OrgRole {
  OWNER
  ADMIN
  MEMBER
}

model OrgMembership {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  role           OrgRole  @default(MEMBER)
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
}

// ──────────────────────────────────────
// ENGAGEMENTS
// ──────────────────────────────────────

enum FundType {
  GOVERNMENTAL
  PROPRIETARY
  FIDUCIARY
  COMPONENT_UNIT_BLENDED
  COMPONENT_UNIT_DISCRETE
}

model Engagement {
  id             String              @id @default(cuid())
  organizationId String
  name           String
  fiscalYearEnd  DateTime
  createdAt      DateTime            @default(now())

  organization Organization         @relation(fields: [organizationId], references: [id])
  tbImports     TrialBalanceImport[]
  fundRules     FundDetectionRule[]
  funds         Fund[]

  statementTemplates   StatementTemplate[]
  statementAssignments StatementLineAssignment[]

  @@index([organizationId])
}

model TrialBalanceImport {
  id           String   @id @default(cuid())
  engagementId String
  createdAt    DateTime @default(now())
  filename     String
  status       String   @default("IMPORTED")
  rowCount     Int      @default(0)
  totalBalance Decimal  @default(0) @db.Decimal(18,2)

  fileType   String?
  hasHeaders Boolean @default(true)
  rawMatrix  Json?
  columnMap  Json?

  engagement Engagement        @relation(fields: [engagementId], references: [id])
  lines      TrialBalanceLine[]

  statementAssignments StatementLineAssignment[]

  @@index([engagementId])
}

model TrialBalanceLine {
  id            String   @id @default(cuid())
  importId      String
  account       String
  description   String?
  finalBalance  Decimal  @db.Decimal(18,2)

  auditGroup    String?
  auditSubgroup String?
  fundCode      String?
  fundType      FundType?

  originalAuditGroup    String?
  originalAuditSubgroup String?
  originalFundCode      String?
  originalFundType      FundType?

  import TrialBalanceImport @relation(fields: [importId], references: [id])

  statementAssignments StatementLineAssignment[]

  @@index([importId])
  @@index([account])
  @@index([fundCode])
}

// ──────────────────────────────────────
// STATEMENTS
// ──────────────────────────────────────

enum StatementType {
  GOVERNMENTAL_FUNDS_BS
  GOVERNMENTAL_FUNDS_IS
}

enum AccountType {
  ASSET
  LIABILITY
  EQUITY
  REVENUE
  EXPENSE
  OTHER
}

model StatementTemplate {
  id           String        @id @default(cuid())
  engagementId String
  statement    StatementType
  name         String
  isDefault    Boolean       @default(true)
  createdAt    DateTime      @default(now())

  engagement Engagement @relation(fields: [engagementId], references: [id])
  lineItems  StatementLineItem[]

  @@index([engagementId])
  @@index([statement])
}

model StatementLineItem {
  id          String       @id @default(cuid())
  templateId  String
  sortOrder   Int
  label       String
  accountType AccountType @default(OTHER)

  template StatementTemplate @relation(fields: [templateId], references: [id])
  assignments StatementLineAssignment[]

  @@index([templateId])
}

model StatementLineAssignment {
  id           String   @id @default(cuid())
  engagementId String
  importId     String
  tbLineId     String
  lineItemId   String
  fundCode     String?
  createdAt    DateTime @default(now())

  tbLine      TrialBalanceLine    @relation(fields: [tbLineId], references: [id])
  lineItem    StatementLineItem   @relation(fields: [lineItemId], references: [id])
  engagement  Engagement          @relation(fields: [engagementId], references: [id])
  import      TrialBalanceImport  @relation(fields: [importId], references: [id])

  @@index([engagementId])
  @@index([importId])
  @@index([fundCode])
  @@unique([importId, tbLineId])
}

// ──────────────────────────────────────
// FUNDS
// ──────────────────────────────────────

model Fund {
  id           String   @id @default(cuid())
  engagementId String
  fundCode     String
  name         String?
  fundType     FundType @default(GOVERNMENTAL)
  isMajor      Boolean  @default(false)

  engagement Engagement @relation(fields: [engagementId], references: [id])

  @@unique([engagementId, fundCode])
}

model FundDetectionRule {
  id           String   @id @default(cuid())
  engagementId String
  name         String
  accountRegex String
  captureGroup Int      @default(1)
  enabled      Boolean  @default(true)
  createdAt    DateTime @default(now())

  engagement Engagement @relation(fields: [engagementId], references: [id])

  @@index([engagementId])
}
